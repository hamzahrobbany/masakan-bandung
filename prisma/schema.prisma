generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  slug      String   @unique
  updatedAt DateTime @updatedAt
  foods     Food[]

  @@index([name])
  @@index([slug])
}

model Food {
  id          String      @id @default(uuid())
  name        String
  price       Int
  description String?
  imageUrl    String
  categoryId  String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  isAvailable Boolean     @default(true)
  isFeatured  Boolean     @default(false)
  rating      Float       @default(5.0)
  stock       Int         @default(0)
  category    Category    @relation(fields: [categoryId], references: [id])
  orderItems  OrderItem[]

  @@index([categoryId])
  @@index([isAvailable])
  @@index([isFeatured])
}

model Order {
  id            String      @id @default(uuid())
  customerName  String?
  customerPhone String?
  note          String?
  status        OrderStatus @default(PENDING)
  total         Int
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  items         OrderItem[]

  @@index([status])
  @@index([createdAt])
  @@index([status, createdAt])
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  foodId    String?
  foodName  String
  foodPrice Int
  quantity  Int
  createdAt DateTime @default(now())
  food      Food?    @relation(fields: [foodId], references: [id])
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

model Admin {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())

  @@index([email])
}

enum OrderStatus {
  PENDING
  PROCESSED
  DONE
  CANCELLED
}
