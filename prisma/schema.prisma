generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================
// ENUMS
// =========================

enum OrderStatus {
  PENDING
  PROCESSED
  DONE
  CANCELLED
}

// =========================
// CATEGORY
// =========================

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  slug      String   @unique

  foods     Food[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([slug])
}

// =========================
// FOOD
// =========================

model Food {
  id          String     @id @default(uuid())
  name        String
  price       Int
  description String?
  imageUrl    String

  // Relasi kategori
  categoryId  String
  category    Category   @relation(fields: [categoryId], references: [id])

  // Status & fitur tambahan
  isAvailable Boolean    @default(true)
  isFeatured  Boolean    @default(false)
  stock       Int        @default(0)
  rating      Float      @default(5.0)

  orderItems  OrderItem[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([categoryId])
  @@index([isAvailable])
  @@index([isFeatured])
}

// =========================
// ORDER
// =========================

model Order {
  id            String      @id @default(uuid())
  customerName  String?
  customerPhone String?
  note          String?

  status        OrderStatus @default(PENDING)
  total         Int

  items         OrderItem[]

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([status])
  @@index([createdAt])
  @@index([status, createdAt])
}

// =========================
// ORDER ITEM
// =========================

model OrderItem {
  id        String   @id @default(uuid())

  orderId   String
  foodId    String?

  // Snapshot dari Food
  foodName  String
  foodPrice Int
  quantity  Int

  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  food      Food?   @relation(fields: [foodId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([orderId])
}

// =========================
// ADMIN
// =========================

model Admin {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String

  createdAt    DateTime @default(now())

  @@index([email])
}
